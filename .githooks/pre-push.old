#!/usr/bin/env bash
#
# Pre-push hook
# Runs tests before allowing a push
#

set -euo pipefail

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Ensure uv is in PATH (for VS Code and other GUI git clients)
export PATH="$HOME/.local/bin:$HOME/.cargo/bin:/usr/local/bin:$PATH"

echo -e "${YELLOW}Running pre-push checks...${NC}"

if ! command -v uv &> /dev/null; then
    echo -e "${RED}Error: uv is not installed${NC}"
    exit 1
fi

echo "Running tests..."
if [ -d "tests" ] && [ "$(find tests -name '*.py' -type f 2>/dev/null | head -1)" ]; then
    if ! uv run pytest tests/ -v --tb=short 2>/dev/null; then
        echo -e "${RED}Tests failed. Please fix failing tests before pushing.${NC}"
        exit 1
    fi
else
    echo -e "${YELLOW}No tests found, skipping test run.${NC}"
fi

# Run beads pre-push hook (prevents pushing stale JSONL)
if command -v bd &> /dev/null && [ -d ".beads" ]; then
    bd hooks run pre-push 2>/dev/null || true
fi

echo -e "${GREEN}Pre-push checks passed!${NC}"
