{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Checks",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "poe",
                "check"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "panel": "shared"
            }
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "poe",
                "format"
            ],
            "problemMatcher": [],
            "presentation": {
                "panel": "shared"
            }
        },
        {
