# Azure AI Foundry Configuration
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4.1
AZURE_AI_EMBEDDING_DEPLOYMENT=embedding-large

# Per-agent model configuration (optional - defaults to AZURE_AI_MODEL_DEPLOYMENT_NAME)
# Use lighter models for structured tasks to reduce cost and latency
AZURE_AI_CHAT_MODEL=gpt-4.1
AZURE_AI_NL2SQL_MODEL=gpt-4.1-mini
AZURE_AI_PARAM_EXTRACTOR_MODEL=gpt-4.1-mini

# SQL Database Connection Data
AZURE_SQL_SERVER=[your_server].database.windows.net
AZURE_SQL_DATABASE=WideWorldImportersStd

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_INDEX_TABLES=tables

# Agent Framework telemetry
ENABLE_INSTRUMENTATION=false                     # is "false" by default
APPLICATIONINSIGHTS_CONNECTION_STRING=           # your Application Insights connection string
ENABLE_SENSITIVE_DATA=false                      # is "false" by default

# Entra ID Authentication
# Use the same values as the frontend app registration, or create a separate API registration
AZURE_AD_CLIENT_ID=
AZURE_AD_TENANT_ID=

# Query template search thresholds (cosine similarity scoring, 0.0â€“1.0 range)
# Minimum cosine similarity score for a template to be considered a match
QUERY_TEMPLATE_CONFIDENCE_THRESHOLD=0.80
# Minimum absolute score gap between 1st and 2nd results to consider unambiguous
QUERY_TEMPLATE_AMBIGUITY_GAP=0.03
